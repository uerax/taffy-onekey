{
    "routing": {
        "domainStrategy": "IPIfNonMatch",
        "rules": [
            {
                "type": "field",
                "network": "udp",
                "outboundTag": "direct"
            }
        ]
    },
    "log": {
        "loglevel": "warning"
    },
    "inbounds": [
        {
            "port": "${port}",
            "protocol": "shadowsocks",
            "settings": {
                "method": "${method}",
                "password": "${password}",
                "level": 0,
                "email": "love@xray.com",
                "network": "udp,tcp"
            }
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom",
            "tag": "direct"
        },
        {
            "tag": "block",
            "protocol": "blackhole"
        }
    ]
}